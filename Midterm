using System;

class Program
{
    static void Main()
    {
        // Get player's name
        Console.Write("Enter your name: ");
        string playerName = Console.ReadLine();

        // Questions and choices
        string[] questions = {
            "Would you rather have super strength (A) or super speed (B)?",
            "Would you rather travel to the future (A) or the past (B)?",
            "Would you rather be a famous musician (A) or a famous athlete (B)?",
            "Would you rather live in a big city (A) or a small town (B)?"
        };

        // Store player choices
        char[] playerChoices = new char[questions.Length];

        // Ask questions
        for (int i = 0; i < questions.Length; i++)
        {
            Console.WriteLine($"\n{questions[i]}");
            Console.Write("Your choice (A/B): ");
            playerChoices[i] = Char.ToUpper(Console.ReadKey().KeyChar);
            Console.WriteLine(); // Move to the next line
        }

        // Provide feedback based on answers
        ProvideFeedback(playerName, playerChoices);
    }

    static void ProvideFeedback(string name, char[] choices)
    {
        Console.WriteLine($"\nThank you for playing, {name}!");
        Console.WriteLine("Here are your results based on your choices:\n");

        // Feedback for each individual question based on player choice
        ProvideChoiceFeedback(name, choices);

        // Add a final remark based on the combination of choices
        Console.WriteLine($"\n{name}, you seem to have a unique blend of preferences!");
        if (choices[0] == 'A' && choices[1] == 'A')
        {
            Console.WriteLine($"{name}, you are someone who values strength and is forward-thinking about the future!");
        }
        else if (choices[2] == 'B' && choices[3] == 'B')
        {
            Console.WriteLine($"{name}, you love peace and simplicityâ€”perhaps you are a quiet and grounded person.");
        }
        else
        {
            Console.WriteLine($"{name}, your choices show a balanced personality that seeks adventure, but with a heart for peace.");
        }
    }

    static void ProvideChoiceFeedback(string name, char[] choices)
    {
        // Feedback for the first question: Super strength vs Super speed
        if (choices[0] == 'A')
        {
            Console.WriteLine($"You prefer super strength, {name}. You value raw power and resilience!");
        }
        else
        {
            Console.WriteLine($"You prefer super speed, {name}. You are fast and adaptable!");
        }

        // Feedback for the second question: Future vs Past
        if (choices[1] == 'A')
        {
            Console.WriteLine($"You are curious about the future, {name}. There are exciting times ahead, and you want to see them unfold!");
        }
        else
        {
            Console.WriteLine($"You value the past, {name}. There's much wisdom to be found in history!");
        }

        // Feedback for the third question: Musician vs Athlete
        if (choices[2] == 'A')
        {
            Console.WriteLine($"You dream of being a musician, {name}. Music is in your soul, and the world needs your sound!");
        }
        else
        {
            Console.WriteLine($"You dream of being an athlete, {name}. Sports are where your passion lies, and you're ready to compete!");
        }

        // Feedback for the fourth question: Big city vs Small town
        if (choices[3] == 'A')
        {
            Console.WriteLine($"You thrive in big cities, {name}! The energy and opportunities in bustling urban environments suit you.");
        }
        else
        {
            Console.WriteLine($"You enjoy the peace of small towns, {name}. The quiet, close-knit community gives you a sense of belonging.");
        }
    }
}

